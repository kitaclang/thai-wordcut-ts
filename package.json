{
  "name": "thai-wordcut-ts",
  "description": "TypeScript-first fork of wordcut: Thai word segmentation library for Node.js projects.",
  "version": "1.0.1",
  "homepage": "https://github.com/kitaclang/thai-wordcut-ts",
  "author": {
    "name": "KC",
    "email": "kitaclang@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kitaclang/thai-wordcut-ts.git"
  },
  "bugs": {
    "url": "https://github.com/kitaclang/thai-wordcut-ts/issues/"
  },
  "licenses": [
    {
      "type": "LGPL",
      "url": "http://www.gnu.org/licenses/lgpl.html"
    }
